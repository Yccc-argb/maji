<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_999"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="批量新增模式"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_piliang"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_marginRight="35dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_vip_num"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_cardCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="会员卡"
                android:textColor="@color/color_333"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/et_vip"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:layout_toRightOf="@+id/tv_cardCd"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="16sp"
                android:maxLength="11"
                android:hint="请输入"/>
            <TextView
                android:id="@+id/tv_sao"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_sao_white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_charge_mechine_num"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="充点机"
                android:textColor="@color/color_333"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/et_charge_num"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:layout_toRightOf="@+id/tv_charge"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="16sp"
                android:maxLength="16"
                android:hint="请输入"/>
            <TextView
                android:id="@+id/tv_xiala"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_marginRight="35dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_xiala"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_vip_name"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textColor="@color/color_333"
                android:id="@+id/tv_name"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名    "/>
            <EditText
                android:id="@+id/et_name"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="16sp"
                android:maxLength="11"
                android:hint="请输入"
                android:text=""/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_vip_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textColor="@color/color_333"
                android:id="@+id/tv_phone"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"/>
            <EditText
                android:id="@+id/et_phone"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="16sp"
                android:maxLength="11"
                android:hint="请输入"
                android:text=""/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_vertify_code"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textColor="@color/color_333"
                android:id="@+id/tv_code"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"/>
            <EditText
                android:id="@+id/et_code"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:layout_toRightOf="@+id/tv_code"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="16sp"
                android:maxLength="11"
                android:hint="请输入"/>
            <TextView
                android:id="@+id/tv_send_vertif"
                android:textSize="14sp"
                android:text="获取验证码"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_get_code"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:id="@+id/rl_btn_sure"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text="确定"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>