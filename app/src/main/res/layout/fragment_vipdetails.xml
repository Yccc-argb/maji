<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">


    <include layout="@layout/title"
        android:id="@+id/title"/>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_vipcard">

            <TextView
                android:id="@+id/tv_vip_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="会员卡: 987658955959809"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/tv_vip_number"
                android:layout_marginTop="16dp"
                android:background="#5837B6" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="当前余额: ¥386"
                android:textColor="@color/color_333"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_business_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="业务类型"
                android:textColor="@color/color_333"
                android:textSize="16sp" />
            <EditText

                android:id="@+id/et_business_type"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:layout_toRightOf="@+id/tv_business_type"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="16sp"
                android:maxLength="11"
                android:text="充值"
                android:hint="请选择"/>

            <TextView
                android:id="@+id/tv_business_xiala"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:background="@drawable/ic_xiala"
                android:gravity="center"
                android:textColor="@color/color_white" />
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_charge_mechine"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="充点机   "
                android:textColor="@color/color_333"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/et_charge_num"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:layout_toRightOf="@+id/tv_charge"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="请选择"/>

            <TextView

                android:id="@+id/tv_xiala"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:background="@drawable/ic_xiala"
                android:gravity="center"
                android:textColor="@color/color_white" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_eee"/>
        <RelativeLayout
            android:id="@+id/rl_charge_num"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="充值点数"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_charge_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_money"
                android:background="@null"
                android:hint="请输入"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/color_333"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:textSize="16sp" />
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_newCd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/tv_newCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="新卡号   "
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_newCd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_newCd"
                android:background="@null"
                android:hint="请输入"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/color_333"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_business_sao"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:background="@drawable/ic_sao_white"
                android:gravity="center"
                android:textColor="@color/color_white" />
            <View
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_eee"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout

        android:id="@+id/rl_btn_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/selector_btn"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>