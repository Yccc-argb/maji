<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/title_bar"/>
    <include layout="@layout/title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/color_333"
            android:id="@+id/tv_phone"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/bg_edittext_cursor"
            android:layout_toRightOf="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            android:maxLength="11"
            android:hint="请输入"
            android:text=""/>
        <View
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_eee"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone">
        <TextView
            android:textColor="@color/color_333"
            android:id="@+id/tv_code"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/bg_edittext_cursor"
            android:layout_toRightOf="@+id/tv_code"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            android:maxLength="11"
            android:hint="请输入"/>
        <TextView
            android:id="@+id/tv_send_vertif"
            android:textSize="14sp"
            android:text="获取验证码"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_get_code"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <View
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_eee"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/color_333"
            android:id="@+id/tv_password_old"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码"/>
        <EditText
            android:id="@+id/et_password_old"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/bg_edittext_cursor"
            android:layout_toRightOf="@+id/tv_password_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            android:maxLength="11"
            android:inputType="numberPassword"
            android:hint="请输入"/>
        <View
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_eee"/>
    </RelativeLayout><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/color_333"
            android:id="@+id/tv_password_new"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/bg_edittext_cursor"
            android:layout_toRightOf="@+id/tv_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            android:maxLength="11"
            android:inputType="numberPassword"
            android:hint="请输入"/>
        <View
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_eee"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/color_333"
            android:id="@+id/tv_password_confirm"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"/>
        <EditText
            android:id="@+id/et_new_password"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/bg_edittext_cursor"
            android:layout_toRightOf="@+id/tv_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            android:maxLength="11"
            android:inputType="numberPassword"

            android:hint="请输入"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_btn_sure"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:text="确定"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>